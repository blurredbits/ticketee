<div id="ticket">
  <header>
    <h1>
      <%= @project.name %>
    </h1>
  </header>

  <header>
    <h2>
      <%= @ticket.name %>
    </h2>
    
    <ul class="actions">
      <li>
        <%= link_to "Edit ticket", [:edit, @project, @ticket], class: "edit" %>
      </li>

      <li>
        <%= link_to "Delete ticket", [@project, @ticket], method: :delete, class: "delete" %>
      </li>
    </ul>
  </header>

  <%= simple_format(@ticket.description) %>
</div>